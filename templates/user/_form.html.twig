{{ form_start(form) }}
<h1 style="font-weight: bold; /* Gras */ 
           color: black; /* Couleur noire */ 
           font-family: 'Times New Roman', serif; /* Police Times New Roman */ 
           font-size: 24px; /* Taille du texte, ajustable selon besoin */ 
           text-align: center; /* Centrer le titre */ 
           margin-bottom: 20px;"> <!-- Espacement sous le titre -->
    Create new User
</h1>

    <div class="form-group">
        {{ form_label(form.username, 'Nom d\'utilisateur') }}
        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.password, 'Mot de passe') }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.tel, 'Téléphone') }}
        {{ form_widget(form.tel, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.gender, 'Sexe') }}
        {{ form_widget(form.gender, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="form-group">
        {{ form_label(form.birthday, 'Date de naissance') }}
        {{ form_widget(form.birthday, {'attr': {'class': 'form-control'}}) }}
    </div>
    <button type="submit" 
        style="background-color: #3b82f6; /* Couleur bleue */ 
               color: white; /* Texte en blanc */ 
               font-weight: bold; /* Texte en gras */ 
               padding: 0.5rem 1rem; /* Espacement interne */ 
               border-radius: 0.25rem; /* Bordures arrondies */ 
               border: none; /* Pas de bordure */ 
               cursor: pointer; /* Curseur pointer pour le bouton */ 
               transition: background-color 0.3s; /* Effet de transition pour le survol */"
        onmouseover="this.style.backgroundColor='#2563eb'" 
        onmouseout="this.style.backgroundColor='#3b82f6'">
    {{ button_label|default('S\'inscrire') }}
</button>

{{ form_end(form) }}
<link rel="stylesheet" href="{{ asset('path/to/style.css') }}">

