{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="isk-mx-auto isk-py-8 isk-px-4 isk-container">
        <h1 class="isk-font-bold isk-text-3xl isk-mb-8">User Details</h1>

        <div class="isk-shadow-md isk-rounded-lg isk-bg-white isk-overflow-hidden">
            <table class="isk-table-auto isk-w-full">
                <tbody class="isk-divide-gray-200 isk-divide-y">
                    <tr>
                        <th class="isk-text-gray-600 isk-text-left isk-font-semibold isk-py-4 isk-px-6">Id</th>
                        <td class="isk-py-4 isk-px-6">{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="isk-text-gray-600 isk-text-left isk-font-semibold isk-py-4 isk-px-6">Username</th>
                        <td class="isk-py-4 isk-px-6">{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th class="isk-text-gray-600 isk-text-left isk-font-semibold isk-py-4 isk-px-6">Roles</th>
                        <td class="isk-py-4 isk-px-6">{{ user.roles ? user.roles|join(', ') : 'None' }}</td>
                    </tr>
                    <tr>
                        <th class="isk-text-gray-600 isk-text-left isk-font-semibold isk-py-4 isk-px-6">Password</th>
                        <td class="isk-py-4 isk-px-6">{{ user.password }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-8">
            <a href="{{ path('app_user_index') }}" class="isk-text-blue-500 isk-mr-4 isk-hover:underline">Back to List</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="isk-text-blue-500 isk-hover:underline">Edit</a>
        </div>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
