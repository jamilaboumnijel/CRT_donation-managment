{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="mx-auto py-8 px-4 container">
        <h1 class="font-bold text-3xl mb-8">User Details</h1>

        <div class="shadow-md rounded-lg bg-white overflow-hidden">
            <table class="table-auto w-full">
                <tbody class="divide-gray-200 divide-y">
                    <tr>
                        <th class="text-gray-600 text-left font-semibold py-4 px-6">Id</th>
                        <td class="py-4 px-6">{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th class="text-gray-600 text-left font-semibold py-4 px-6">Username</th>
                        <td class="py-4 px-6">{{ user.username }}</td>
                    </tr>
                    <tr>
                        <th class="text-gray-600 text-left font-semibold py-4 px-6">Roles</th>
                        <td class="py-4 px-6">{{ user.roles ? user.roles|join(', ') : 'None' }}</td>
                    </tr>
                    <tr>
                        <th class="text-gray-600 text-left font-semibold py-4 px-6">Password</th>
                        <td class="py-4 px-6">{{ user.password }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-8">
            <a href="{{ path('app_user_index') }}" class="text-blue-500 mr-4 hover:underline">Back to List</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="text-blue-500 hover:underline">Edit</a>
        </div>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
