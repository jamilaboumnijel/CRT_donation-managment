{% extends 'baseV1.html.twig' %}

{% block title %}Donate Index{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <h1 class="text-center font-bold text-4xl mb-8">Donate Index</h1>
      <div class="overflow-x-auto">
        <table class="table-auto shadow-md rounded-lg bg-white w-full">
            <thead class="text-gray-700 bg-gray-200">
                <tr>
                    <th class="py-2 px-4">Id</th>
                    <th class="py-2 px-4">Type</th>
                    <th class="py-2 px-4">Created At</th>
                    <th class="py-2 px-4">Created By</th>
                    <th class="py-2 px-4">Quantity</th>
                    <th class="py-2 px-4">Description</th>
                    <th class="py-2 px-4">Title</th>
                    <th class="py-2 px-4">Actions</th>
                </tr>
            </thead>
            <tbody class="text-gray-600">
                {% for donate in donates %}
                <tr>
                    <td class="py-2 border px-4">{{ donate.id }}</td>
                    <td class="py-2 border px-4">{{ donate.type }}</td>
                    <td class="py-2 border px-4">{{ donate.createdAt ? donate.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td class="py-2 border px-4">{{ donate.createdBy }}</td>
                    <td class="py-2 border px-4">{{ donate.quantity }}</td>
                    <td class="py-2 border px-4">{{ donate.description }}</td>
                    <td class="py-2 border px-4">{{ donate.title }}</td>
                    <td class="py-2 border px-4">
                        <a href="{{ path('app_donate_show', {'id': donate.id}) }}" class="text-blue-500 hover:underline">Show</a>
                        <a href="{{ path('app_donate_edit', {'id': donate.id}) }}" class="text-blue-500 ml-2 hover:underline">Edit</a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="8" class="border text-center py-2 px-4">No records found</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="mt-8 justify-center flex">
        <a href="{{ path('app_donate_new') }}" class="shadow-md rounded-full bg-blue-500 ease-in-out duration-300 transition text-white font-bold py-2 px-6 hover:bg-blue-600">Create New</a>
    </div>
</div>
{% endblock %}
