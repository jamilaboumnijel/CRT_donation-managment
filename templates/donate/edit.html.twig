{% extends 'base.html.twig' %}

{% block title %}Edit Donate{% endblock %}

{% block body %}
   <div class=" isk-p-9 isk-bg-zinc-200 isk-rounded-xl">
    <div>
        <h1 class="isk-flex isk-justify-center isk-text-3xl isk-font-bold isk-mb-9 isk-text-sky-800">Edit Donate</h1>
        <form class=" isk-max-w-lg isk-items-center isk-border-neutral-950" action="{{ path('app_donate_index') }}" method="post">
            {{ form_start(form) }}
            <div>
                {{ form_label(form.type, 'Type') }}
                {{ form_widget(form.type) }}
            </div>
            <div>
                {{ form_label(form.created_At, 'Created At') }}
                {{ form_widget(form.created_At) }}
            </div>
            <div>
                {{ form_label(form.created_By, 'Created By') }}
                {{ form_widget(form.created_By) }}
            </div>
            <div>
                {{ form_label(form.quantity, 'Quantity') }}
                {{ form_widget(form.quantity) }}
            </div>
            <div>
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description) }}
            </div>
            <div>
                {{ form_label(form.title, 'Title') }}
                {{ form_widget(form.title) }}
            </div>
            <div class="isk-flex isk-justify-between isk-mt-4">
                <div>
                    <button type="submit" class="isk-btn isk-bg-gray-700 isk-hover:bg-blue-700 isk-text-white isk-font-bold isk-py-2 isk-px-2 isk-rounded">Update</button>
                </div>
                <div>
                    <a href="{{ path('app_donate_index') }}" class="isk-btn isk-bg-gray-700 isk-hover:bg-blue-700 isk-text-white isk-font-bold isk-py-2 isk-px-1 isk-rounded isk-mr-4">Back to List</a>
                </div>
                <div>
                    <form method="post" action="{{ path('app_donate_delete', {'id': donate.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ donate.id) }}">
                        <button type="submit" class="isk-btn isk-bg-gray-700 isk-hover:bg-red-700 isk-text-white isk-font-bold isk-py-2 isk-px-2 isk-rounded">Delete</button>
                    </form>
                </div>
            </div>
            {{ form_end(form) }}
        </form>
    </div>
</div>

{% endblock %}
