{% extends 'baseV1.html.twig' %}

{% block title %}Edit Donate{% endblock %}

{% block body %}
   <div class=" p-9 bg-zinc-200 rounded-xl">
    <div>
        <h1 class="flex justify-center text-3xl font-bold mb-9 text-sky-800">Edit Donate</h1>
        <form class=" max-w-lg items-center border-neutral-950" action="{{ path('app_donate_index') }}" method="post">
            {{ form_start(form) }}
            <div>
                {{ form_label(form.type, 'Type') }}
                {{ form_widget(form.type) }}
            </div>
            <div>
                {{ form_label(form.created_At, 'Created At') }}
                {{ form_widget(form.created_At) }}
            </div>
            <div>
                {{ form_label(form.created_By, 'Created By') }}
                {{ form_widget(form.created_By) }}
            </div>
            <div>
                {{ form_label(form.quantity, 'Quantity') }}
                {{ form_widget(form.quantity) }}
            </div>
            <div>
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description) }}
            </div>
            <div>
                {{ form_label(form.title, 'Title') }}
                {{ form_widget(form.title) }}
            </div>
            <div class="flex justify-between mt-4">
                <div>
                    <button type="submit" class="btn bg-gray-700 hover:bg-blue-700 text-white font-bold py-2 px-2 rounded">Update</button>
                </div>
                <div>
                    <a href="{{ path('app_donate_index') }}" class="btn bg-gray-700 hover:bg-blue-700 text-white font-bold py-2 px-1 rounded mr-4">Back to List</a>
                </div>
                <div>
                    <form method="post" action="{{ path('app_donate_delete', {'id': donate.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ donate.id) }}">
                        <button type="submit" class="btn bg-gray-700 hover:bg-red-700 text-white font-bold py-2 px-2 rounded">Delete</button>
                    </form>
                </div>
            </div>
            {{ form_end(form) }}
        </form>
    </div>
</div>

{% endblock %}
