{% extends 'baseV1.html.twig' %}

{% block title %}New Donate{% endblock %}

{% block body %}
     <div class="p-9 rounded-xl bg-zinc-200">
       <div>
        <h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl"><span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">Create New Donate</span></h1>
             <form class="max-w-md items-center border-neutral-950" action="{{ path('app_donate_index') }}" method="post">
          {{ form_start(form) }}
        <div>
            {{ form_label(form.type, 'Type') }}
            {{ form_widget(form.type) }}
        </div>
        <div>
            {{ form_label(form.created_At, 'Created At') }}
            {{ form_widget(form.created_At) }}
        </div>
        <div>
            {{ form_label(form.created_By, 'Created By') }}
            {{ form_widget(form.created_By) }}
        </div>
        <div>
            {{ form_label(form.quantity, 'Quantity') }}
            {{ form_widget(form.quantity) }}
        </div>
        <div>
            {{ form_label(form.description, 'Description') }}
            {{ form_widget(form.description) }}
        </div>
        <div>
            {{ form_label(form.title, 'Title') }}
            {{ form_widget(form.title) }}
        </div>
        <div class="flex justify-center mt-7">
              <button type="submit" class="relative inline-flex items-center justify-center py-0.9 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900 rounded-lg group bg-gradient-to-br from-cyan-500 to-blue-500 group-hover:from-cyan-500 group-hover:to-blue-500 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-cyan-200 dark:focus:ring-cyan-800">
                    <span class="relative px-7 py-2.5 transition-all ease-in duration-75 bg-white dark:bg-gray-900 rounded-md group-hover:bg-opacity-0">Save</span>
                </button> 
            <a href="{{ path('app_donate_index') }}"  class="ml-4 mt-2 text-gray-500 hover:text-sky-700">Back to List</a>    
        </div>
    
        {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
